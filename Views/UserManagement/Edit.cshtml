@model IdentityMvcDemoApp.Models.EditUserRolesViewModel
<h2>Edit Roles for @Model.Email</h2>

<form action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />
    @for (int i = 0; i < Model.Roles.Count; i++) 
    {
        <div>
            <input asp-for="@Model.Roles[i].Selected" type="checkbox" />
            <label>@Model.Roles[i].RoleName</label>
            <input type="hidden" asp-for="@Model.Roles[i].RoleName">
        </div>
    }
    <button type="submit">Save</button>
</form>